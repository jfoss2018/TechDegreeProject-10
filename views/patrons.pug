extends layout.pug

block content

  include search_box_patrons

  h1 Patrons
  p
    a(href="/patrons/new", class="button") Create New Patron
  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody

      each patron in patrons
        tr
          td
            a(href=`/patrons/${patron.id}`) #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}

      div.pageButtons
        ul.pageButtons
          each val in buttons
            li.pageButtons
              form(action="/patrons", method="post")
                input(type="submit", name="page", value=`${val}`)
